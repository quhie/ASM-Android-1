<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.UpdateProductActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:background="#428afa">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textColor="#FFFFFF"/>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/updateImage"
                android:layout_marginTop="10dp"
                android:background="@drawable/upload_img"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/updateId"
                android:background="@drawable/rounded_border"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:hint=" ID "
                android:gravity="start|center_vertical"
                android:textColor="@color/red"
                android:inputType="number"
                android:maxLines="1"

                />
<!--                android:enabled="false"-->


            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/updateTitle"
                android:background="@drawable/rounded_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Cập nhập tên sản phẩm"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"
                android:inputType="text"
                android:maxLines="1"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/updateDesc"
                android:background="@drawable/rounded_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Cập nhật mô tả"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"
                android:inputType="text"
                android:maxLines="1"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/updateGia"
                android:background="@drawable/rounded_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Cập nhật Giá"
                android:inputType="number"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"
                android:maxLines="1"
                />
            <RelativeLayout
                android:id="@+id/saveButtonUpdate"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_background"
                android:clickable="true">

                <TextView
                    android:id="@+id/btnTextUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="end"
                    android:text="Complete ✓"
                    android:textColor="#428afa"
                    android:textSize="20sp"
                    android:textStyle="normal"  />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/btnAnimation"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    app:lottie_autoPlay="false"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/load" />
            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</ScrollView>